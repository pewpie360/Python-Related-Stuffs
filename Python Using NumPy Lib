#Slice and Indexes
np_multi_list1[0, 0] = 2
np_multi_list1.itemset((0, 1), 4)
np_multi_list1

#knowing the shape of array
np_multi_list1.shape

#get value by index
np_multi_list1[0, 1]
np_multi_list1.item(0, 1)

#get specific indices
np.take(np_multi_list1, [0, 4, 1])

#replace index value with new value
np.put(np_multi_list1, [0, 4, 1], [5, 5, 5])
np_multi_list1
